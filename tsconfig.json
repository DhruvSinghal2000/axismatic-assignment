{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "jsx": "react",
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "target": "ES6",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist/"
    }
}